<h1>Movies</h1>
  <div class="movie-card">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <%= image_tag(movie.poster_url, width: 200) %>
        <div class="card-content">
          <h2>Title:</h2><h3><%= movie.title %></h3>
          <h2>Description:</h2>
          <%= movie.overview %>
          <h2>Rating:</h2>
          <%= movie.rating %>
          <h2>Personal comment:</h2>
          <%= bookmark.comment %>
        </div>
      <%= link_to 'Delete from the list', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"} %>
    <% end %>
  </div>
