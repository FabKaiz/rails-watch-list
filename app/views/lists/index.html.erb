<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<h1>ALL MY LISTS</h1>

<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %></li>
  <% end %>
</ul>


<h1>CREATE A NEW LIST</h1>

<%= simple_form_for @list do |f| %>

  <%= f.input :name %>
  <%= f.submit "Create", class: 'btn btn-primary w-100' %>

<% end %>